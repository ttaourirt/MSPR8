<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_weight="1"
        android:background="#FF382BEE"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/Titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/gostylecoupon"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#ff2caaff"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="203dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:paddingHorizontal="150dp"
            tools:ignore="MissingConstraints">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingTop="70dp"
                android:text="@string/l_application_des_bon_plans"
                android:textColor="#ff2caaff"
                android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ff2caaff"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="180dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="203dp">

        <Button
            android:id="@+id/bouton1"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="256dp"
            android:enabled="false"
            android:text="@string/se_connecter"
            android:textColor="?attr/colorBackgroundFloating"
            app:backgroundTint="@android:color/holo_orange_light" />

        <Button
            android:id="@+id/bouton"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:enabled="false"
            android:text="@string/s_inscrire"
            android:textColor="?attr/colorBackgroundFloating"
            app:backgroundTint="@android:color/holo_orange_light" />

        <Button
            android:id="@+id/bouton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:enabled="false"
            android:text="les bons plans"
            android:textColor="?attr/colorBackgroundFloating"
            app:backgroundTint="@android:color/holo_orange_light" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>